<div id="notice alert-success"><%= notice %></div>

<h1>Lista de Departamentos</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departamentos.each do |departamento| %>
      <tr>
        <td width="80%"><%= departamento.nome %></td>
        <td>
          <%= link_to 'Show', departamento, class: "btn btn-default" %>
          <%= link_to 'Edit', edit_departamento_path(departamento), class: "btn btn-info" %>
          <%= link_to 'Destroy', departamento, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Departamento', new_departamento_path, class: "btn btn-primary" %>
